{
	"name": "wiki-from-folder",
	"version": "0.0.1",
	"description": "A github action that creates a wiki from a folder of markdown files, with the option to include a custom sidebar.",
	"main": "dist/index.js",
	"type": "module",
	"engines": {
		"node": "21.x"
	},
	"scripts": {
		"test": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' c8 mocha",
		"build": "tsc -p tsconfig.json",
		"package": "npx ncc build src/index.ts --minify --license licenses.txt",
		"coverage": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' c8 -r json-summary mocha"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MikhaD/wiki-from-folder.git"
	},
	"keywords": [
		"github action",
		"wiki",
		"markdown",
		"documentation",
		"automation"
	],
	"author": "MikhaD",
	"license": "GPL-3.0-only",
	"bugs": {
		"url": "https://github.com/MikhaD/wiki-from-folder/issues"
	},
	"homepage": "https://github.com/MikhaD/wiki-from-folder#readme",
	"devDependencies": {
		"@types/chai": "^4.3.13",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.30",
		"@types/sinon": "^17.0.3",
		"@vercel/ncc": "^0.38.1",
		"c8": "^9.1.0",
		"chai": "^5.1.0",
		"mdast-util-from-markdown": "^2.0.0",
		"mdast-util-to-markdown": "^2.1.0",
		"mocha": "^10.3.0",
		"sinon": "^17.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.2",
		"unist-util-visit": "^5.0.0"
	},
	"mocha": {
		"require": [
			"ts-node/register"
		],
		"extension": [
			"ts"
		],
		"spec": [
			"tests/**/*.test.ts"
		]
	},
	"c8": {
		"reporter": [
			"html",
			"text"
		],
		"exclude": [
			"**/*.test.ts"
		]
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/exec": "^1.1.1"
	}
}
